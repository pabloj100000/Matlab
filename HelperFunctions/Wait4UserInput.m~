function Wait4UserInput(values)
    global screen
    
    ESCAPE = KbName('escape');
    text1 = 'Select with the mouse your choice';
    text2 = '';
    for i=1:length(values)
        text2 = [text2, values(i), '\t'];
    end
    
    Screen('FillRect', screen.w, screen.gray);
    Screen(screen.w, 'DrawText', text1 ,30,30, 0 );
    Screen('Flip', screen.w)
    i=0
    while (1)
        [x,y,buttons] = GetMouse(screen.w);
        [~, ~, keyCode, ~] = KbCheck;
        if (keyCode(ESCAPE))
            break
        end
        if buttons(1)
            
            fprintf('Someone''s pressing the first button!\n');
        end
        i=i+1;
    end
    end
